@model GIP2LearnPlatform.Models.Planning

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Planning</h4>
    <hr />

    <p style="all:unset;">
        @Html.LabelFor(model => model.Lessons, htmlAttributes: new { @class = "col-md-2" })

        <select multiple name="Lessons">

            @foreach (var b in ViewBag.Lessons)
            {
            <option>@b.CourseId ; @b.ClassroomId ; @b.Time </option>
            }
        </select>
    </p>
   

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
