@model GIP2LearnPlatform.Models.Lesson

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Lesson</h4>
    <hr />

    <p>
        @Html.LabelFor(model => model.CourseId, htmlAttributes: new { @class = "col-md-2" })

        <select name="CourseId">

            @foreach (var b in ViewBag.Courses)
            {
                <option>@b.Name</option>
            }
        </select>
    </p>

    <p>
        @Html.LabelFor(model => model.ClassroomId, htmlAttributes: new { @class = "col-md-2" })

        <select name="ClassroomId">

            @foreach (var b in ViewBag.Classrooms)
            {
                <option>@b.Location</option>
            }
        </select>
    </p>

    <div class="form-group">
        @Html.LabelFor(model => model.Time, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Time, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Time, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
