@model IEnumerable<GIP2LearnPlatform.Models.CourseJoinRequest>

@{
    ViewBag.Title = "Courses Managment";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Request joining to a course", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Student Approval State
        </th>
        <th>
            Teacher Approval State
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ApprovedByStudent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApprovedByTeacher)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course)
            </td>
            <td>
                @if (User.IsInRole("admin") || User.IsInRole("teacher") || User.Identity.Name == item.User)
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                }
                @Html.ActionLink("Details", "Details", new { id = item.Id })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
